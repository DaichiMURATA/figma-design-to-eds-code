{
  "name": "@adobe/aem-boilerplate",
  "type": "module",
  "private": true,
  "version": "1.3.0",
  "description": "Starter project for Adobe Helix",
  "scripts": {
    "lint:js": "eslint .",
    "lint:css": "stylelint \"blocks/**/*.css\" \"styles/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "extract-figma-tokens": "node scripts/extract-figma-tokens.js",
    "extract-eds-spec": "node scripts/extract-eds-specification.js",
    "discover-spec": "node scripts/discover-living-spec.js",
    "aem:up": "aem up",
    "aem:down": "aem down",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:a11y": "node scripts/test-storybook-a11y.js",
    "validate-block": "node scripts/compare-figma-storybook.js",
    "visual-test": "node scripts/visual-regression-local.js",
    "analyze-diff": "node scripts/analyze-diff-with-vision.js",
    "crop-for-analysis": "node scripts/crop-for-analysis.js",
    "inspect-figma": "node scripts/inspect-figma-nodes.js",
    "discover-components": "node scripts/discover-figma-components.js",
    "extract-styles": "node scripts/extract-figma-styles.js",
    "download-assets": "node scripts/download-figma-assets.js",
    "download-all-variants": "node scripts/download-all-variant-assets.js",
    "capture-figma-variant": "node scripts/capture-figma-variant.js",
    "init-project": "node scripts/init-project.js",
    "chromatic:storybook": "npx chromatic --project-token=${CHROMATIC_STORYBOOK_TOKEN}",
    "test:chromatic": "npx playwright test --config=chromatic.config.js",
    "chromatic:playwright": "npx chromatic --playwright --project-token=${CHROMATIC_PLAYWRIGHT_TOKEN}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adobe/aem-boilerplate.git"
  },
  "author": "Adobe",
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/adobe/aem-boilerplate/issues"
  },
  "homepage": "https://github.com/adobe/aem-boilerplate#readme",
  "devDependencies": {
    "@adobe/aem-cli": "^16.16.19",
    "@babel/eslint-parser": "7.28.6",
    "@chromatic-com/playwright": "^0.12.8",
    "@chromatic-com/storybook": "^5.0.0",
    "@playwright/test": "^1.45.3",
    "@storybook/addon-a11y": "^10.2.0",
    "@storybook/addon-designs": "^11.1.1",
    "@storybook/addon-docs": "^10.2.0",
    "@storybook/html-vite": "^10.2.0",
    "axe-core": "^4.10.2",
    "axe-playwright": "^2.0.3",
    "chromatic": "^13.3.5",
    "dotenv": "^16.4.7",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.32.0",
    "http-server": "^14.1.1",
    "inquirer": "^12.3.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.45.3",
    "pngjs": "^7.0.0",
    "sharp": "^0.34.5",
    "storybook": "^10.2.0",
    "stylelint": "16.26.1",
    "stylelint-config-standard": "39.0.1",
    "vite": "^7.3.1"
  }
}
